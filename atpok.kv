#:kivy 2.0

#:set COLOR_CURR_BUTTON_NOT_CLICKED 0.4, 0.4, 0.4, 1
#:set COLOR_BACKGROUND 0.3, 0.3, 0.3, 1
#:set COLOR_OPT_BUTTON 130 / 255, 130 / 255, 130 / 255, 1

<DateTextInput>:
    multiline: False
    background_color: [1,1,1,0.9]
    cursor_color: [0, 0, 0, 1]
    write_tab: False

<MenuScreen>:
    canvas:
        Color:
            rgb: COLOR_BACKGROUND
        Rectangle:
            pos: root.pos
            size: root.size

    # Main window layout
    BoxLayout:
        orientation: "horizontal"

        # Left menu layout
        StackLayout:
            canvas:
                Color:
                    rgba: COLOR_CURR_BUTTON_NOT_CLICKED
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: layout_buttons
            size_hint: 0.15, 1
            size_hint_min_x: 70

            # Options and favourites buttons
            GridLayout:
                size_hint: 1, 0.08
                size_hint_min_y: 30
                cols: 2
                padding: [4, 4, 4, 4]
                spacing: [4, 4]

                # Favourites button
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    Button:
                        id: button_favourites
                        background_normal: ""
                        background_color: COLOR_OPT_BUTTON
                        on_press:
                            root.manager.transition.direction = 'right'
                            root.manager.current = 'favourites'
                    Image:
                        source: "images/star_icon.png"
                        size_hint: .6, .6

                # Options button
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    Button:
                        id: button_options
                        background_normal: ""
                        background_color: COLOR_OPT_BUTTON
                        on_press:
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'settings'
                    Image:
                        source: "images/options_icon.png"
                        size_hint: .6, .6

            # Refresh button
            GridLayout:
                size_hint: 1, 0.05
                cols: 1
                padding: [0, 0, 0, 4]
                Button:
                    background_normal: ""
                    background_color: COLOR_OPT_BUTTON
                    text: "Odśwież"
                    on_press: root.refresh_button_press()

            StackLayout:
                id: layout_currency_buttons

        # Right part of the main window
        BoxLayout:
            orientation: "vertical"

            # Chart image
            Image:
                id: image_chart
                source: "images/chart.png"
                allow_stretch: True
                color: [1, 1, 1, 0.9]

            # Time range input and buttons
            GridLayout:
                id: layout_time_range
                size_hint: 1, 0.07
                size_hint_min_y: 33
                cols: 3
                padding: [5, 5, 5, 2]
                spacing: [5, 5]

                # Date input boxes
                DateTextInput:
                    id: text_input_start_date
                    hint_text: 'Początkowa data (dd.mm.rrrr)'

                DateTextInput:
                    id: text_input_end_date
                    hint_text: 'Końcowa data (dd.mm.rrrr)'

            # Predefined time range buttons layout
            GridLayout:
                id: layout_time_buttons
                size_hint: 1, 0.07
                size_hint_min_y: 33
                cols: 5
                padding: [5, 3, 5, 5]
                spacing: [5, 5]


<FavouritesScreen>:
    AnchorLayout:
        canvas:
            Color:
                rgb: COLOR_BACKGROUND
            Rectangle:
                pos: root.pos
                size: root.size
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: .9, .9

            GridLayout:
                id: layout_switches
                cols: 3
                spacing: 10, 10

            AnchorLayout:
                size_hint: 1, 0.1
                anchor_x: 'right'
                padding: 10, 10, 10, 10
                Button:
                    size_hint: 0.1, 1
                    text: "Wróć"
                    on_press:
                        root.manager.get_screen('menu').refresh_currency_buttons()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'menu'


<SettingsScreen>:
    FloatLayout:
        GridLayout:
            size_hint: 0.6, 0.6
            Button:
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'